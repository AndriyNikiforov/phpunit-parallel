{
    "name": "vektah/phpunit-parallel",
    "type": "parallel-test-runner",
    "description": "Concurrent Test Executor for PHPUnit",
    "keywords": ["ci", "phpunit", "testing", "concurrent", "parallel"],
    "homepage": "https://github.com/Vektah/phpunit-parallel",
    "licence": "BSD-2-Clause",
    "authors": [
        {
            "name": "Adam Scarr",
            "email": "adam@vektah.net",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.5.0",
        "react/react": "~0.4",
        "symfony/console": "*",
        "vektah/common": "*"
    },

    "require-dev": {
        "vektah/bugfree-dangerzone": "*",
        "phpunit/phpunit": "~4",
        "vektah/psr2": "*",
        "squizlabs/php_codesniffer": "~1.0",
        "phake/phake": "v2.0.0-rc1"
    },

    "bin": [
        "bin/phpunit-parallel"
    ],

    "autoload": {
        "psr-4": {"phpunit_parallel\\": "src/main/phpunit_parallel"}
    }
}
